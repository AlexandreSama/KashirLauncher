{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "kashirlauncher",
  "version": "0.1.0",
  "identifier": "fr.djinn.kashirlauncher",
  "build": {
    "beforeDevCommand": "vite dev --port 1420",
    "beforeBuildCommand": "vite build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "kashirlauncher",
        "width": 1380,
        "height": 720,
        "center": true,
        "resizable": false,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["*"],
          "permissions": [
            "core:resources:default",

            "core:event:default",
            "core:event:allow-listen",

            "core:window:default",
            "core:window:allow-minimize",
            "core:window:allow-close",

            "core:app:default",

            { "identifier": "shell:allow-open", "urls": [
              "https://login.microsoftonline.com/*",
              "https://www.microsoft.com/*"
            ] },
            "stronghold:default"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
